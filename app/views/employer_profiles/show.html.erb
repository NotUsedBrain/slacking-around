<p id="notice"><%= notice %></p>

<div class= 'form-row justify-content-center text-center'>
  <% if @employer_profile.avatar.attached? %>
    <%= image_tag(@employer_profile.avatar, :class => "style_image")  %>
  <% else %>
    <%= image_tag('default.jpg', :class => "style_image") %>
  <% end %>
</div>
<br>
<div class= 'form-row justify-content-center text-center'>
  <div class='form-group col-md-2'>
    <strong>First name:</strong>
    <%= @employer_profile.first_name %>
  </div>
</div>

<div class= 'form-row justify-content-center text-center'>
  <div class='form-group col-md-2'>
    <strong>Last name:</strong>
    <%= @employer_profile.last_name %>
  </div>
</div>

<div class= 'form-row justify-content-center text-center'>
  <div class='form-group col-md-2'>
    <strong>Business name:</strong>
    <%= @employer_profile.business_name %>
  </div>
</div>

<div class= 'form-row justify-content-center text-center'>
  <div class='form-group col-md-2'>
    <%= link_to 'Edit', edit_employer_profile_path(@employer_profile), class: 'btn btn-primary' %>
  </div>
</div>

<%#= link_to 'Back', root_path %>
