<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="login-wrap">
	<div class="login-html">
		<input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Sign In</label>
		<input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">Sign Up</label>
		<div class="login-form">
			<div class="sign-in-htm">
				<div class="group">
					<label for="user" class="label">Email Address</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input' %>
				</div>
				<div class="group">
					<label for="pass" class="label">Password</label>
          <%= f.password_field :password, autocomplete: "current-password", class: 'input' %>
				</div>
				<div class="group">
          <%= f.submit "Log in", class: 'button' %>
				</div>
				<div class="hr"></div>
				<div class="foot-lnk">
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
          <% end %>
				</div>
			</div>
<% end %>

	<% resource.build_employee_profile %>
 	<%= form_for(resource, :as => resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

      <div class="sign-up-htm">
				<div class="group">
					<label for="pass" class="label">Email Address</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input' %>
				</div>
				<div class="group">
					<label for="pass" class="label">Password</label>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: 'input' %>
				</div>
				<div class="group">
					<label for="pass" class="label">Repeat Password</label>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input' %>          
				</div>
				<div>


    		<%= f.fields_for :employee_profile do |employee_profile_form| %>

        <div class="group">
					<label for="pass" class="label">Profession</label>					
        	<%= employee_profile_form.collection_select :profession_id, Profession.all, :id, :name, {prompt: "Choose a profession" }, class: 'input' %><br />
        </div>
				<div class="group">
          <%= f.submit "Sign up", class: 'button' %>
				</div>
			</div>
	<% end %>
	
	</div>
	</div>
</div>
<% end %>
