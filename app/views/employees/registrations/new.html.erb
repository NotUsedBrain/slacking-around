<div class='text-center'>
  <h2>Employee Sign up</h2>
    
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <% resource.build_employee_profile %>

    <div class= 'form-row justify-content-center'>
      <div class="form-group col-md-3">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>
    </div>

    <div class= 'form-row justify-content-center'>
      <div class="form-group col-md-3">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
      </div>
    </div>

    <div class= 'form-row justify-content-center'>
      <div class="form-group col-md-3">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
      </div>
    </div>

    <%= f.fields_for :employee_profile do |employee_profile_form| %>

    <div class= 'form-row justify-content-center'>
        <div class="form-group col-md-3">
            <%= employee_profile_form.label :profession_id %><br />
          <%= employee_profile_form.collection_select :profession_id, Profession.all, :id, :name, {prompt: "Choose a profession" }, class: 'form-control' %><br />
        </div>
      </div>

      <div class= 'form-row justify-content-center'>
        <div class="form-group col-md-3">
        <%= employee_profile_form.label :first_name %><br />
        <%= employee_profile_form.text_field :first_name, class: 'form-control' %>
        </div>
      </div>

      <div class= 'form-row justify-content-center'>
        <div class="form-group col-md-3">
        <%= employee_profile_form.label :last_name %>
        <%= employee_profile_form.text_field :last_name, class: 'form-control' %>
        </div>
      </div>

    <% end %>

    <div class="col-md-4 mx-auto">
      <%= f.submit "Sign up", class: 'btn form-button' %>
    </div>

  <% end %>
</div>
