<h2>Manage Your Applications</h2><br>
<% if current_employer %>
  <% @current_employer.job_postings.order("created_at DESC").each do |post|%>
    <div class="section-panel section-panel--theme">
      <div class="section-panel__inner">
        <div class="flex flex--align-items flex--justify-between">
          <h3 class="text-white" style="font-size: 2.75rem">
            <%= link_to post, class: "text-white" do %>
              <%= post.title %> @ <%= post.employer.employer_profile.business_name %>
            <% end %>
          </h3>
          <div style="background: white; padding: 5px 15px 5px 30px;border-radius: 30px;">
            <% if post.profession.name == 'Chef' %>
              <%= link_to image_tag('kitchen_rgb.svg', height: 40, alt: "Brand"), root_path, class: 'navbar-brand' %>
            <% elsif post.profession.name == 'Catering Manager' %>
              <%= link_to image_tag('catering_rgb.svg', height: 40, alt: "Brand"), root_path, class: 'navbar-brand' %>
            <% elsif post.profession.name == 'Bar Tender' %>
              <%= link_to image_tag('bar_rgb.svg', height: 40, alt: "Brand"), root_path, class: 'navbar-brand' %>
            <% end %>
          </div>
        </div>
        <hr class="horizontal-divider">
        <div class="text-white"><%= simple_format(post.content) %></div>
        <hr class="horizontal-divider">
        <div class="flex flex--gutters">
          <div class="text-white"><strong>Start: </strong><%= post.start_time.strftime("%d %b %Y at %H:%m") %></div>
          <div><span class="vertical-divider"></span></div>
          <div class="text-white"><strong>End: </strong><%= post.end_time.strftime("%d %b %Y at %H:%m")%></div>
          <div><span class="vertical-divider"></span></div>
          <div class="text-white"><strong>Hourly Rate: </strong><%= post.hourly_rate %></div>
        </div>  
        <hr class="horizontal-divider">
        <div class="flex">
          <div>
            <%= link_to 'Delete', post, method: :delete, data: {confirm: 'Are you sure?'}, class: 'button button--danger' %>
          </div>
        </div>
      </div>
    </div>
    <br>
    <br>
  <% end %>
<% end %>