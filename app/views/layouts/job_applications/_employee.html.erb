<% @current_employee.job_applications.each do |post|%>
  <div class='container'>
    <%= 'Opening for '%>
    <strong> <%= link_to post.job_posting.title, post %> </strong> <%# need to redirect to correct page %>
    <%= 'at #'%>
    <strong> <%= post.job_posting.employer.employer_profile.business_name %> </strong>
    <%= 'starting: '%>
    <%= post.job_posting.start_time.strftime("%d %b %Y at %H:%m") %>
    <%= link_to 'Cancel Application', post, method: :delete, data: {confirm: 'Are you sure?'} %>
  </div>
<% end %>