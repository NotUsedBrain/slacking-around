<div style="margin-top: 30px">
  <div class="content-wrap">
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <%= link_to image_tag('logo_rgb_reverse.svg', height: 50, alt: "Brand"), root_path, class: 'navbar-brand' %>
        <button class="custom-toggler navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <%= link_to 'Applications', job_applications_path, class: "nav-link" %>
            </li>
          </ul>
          <ul class='navbar-nav ml-auto'>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Account
              </a>
              <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <a class="dropdown-item"><%= current_employee.email %></a>
                  <div class="dropdown-divider"></div>
                  <% if current_employee.employee_profile == nil %>
                    <%= link_to 'Create Profile', new_employee_profile_path, class: "dropdown-item" %>
                  <% else %>
                    <%= link_to 'Profile', current_employee.employee_profile, class: "dropdown-item" %>
                  <% end %>  
                <div class="dropdown-divider"></div>
                  <%= link_to 'Log Out', destroy_employee_session_path, method: :delete, class: "dropdown-item" %>
              </div>
            </li>
          </ul>
      </div>
      </nav>
  </div>
</div>

