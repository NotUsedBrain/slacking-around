<p id="notice"><%= notice %></p>

<div>
  <% if @employee_profile.avatar.attached? %>

    <%= image_tag(@employee_profile.avatar, :class => "style_image")  %>
  <% else %>
    <%= image_tag('default.jpg', :class => "style_image") %>
  <% end %>
</div>

<p>
  <strong>Profession:</strong>
  <%= @employee_profile.profession.name %>
</p>

<p>
  <strong>First name:</strong>
  <%= @employee_profile.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @employee_profile.last_name %>
</p>

<p>
  <strong>Date of birth:</strong>
  <%= @employee_profile.date_of_birth %>
</p>
 


<%= link_to 'Edit', edit_employee_profile_path(@employee_profile) %> |
<%= link_to 'Back', root_path %>

<br>
<br>
<h2>Feedbacks:</h2>
<%= form_with(model: [@employee_profile, @employee_profile.comments.build]) do |f| %>
  <%= f.text_area :content, placeholder: "write a feedback for this Employee" %><br>
  <%= f.submit "post", class: "btn btn-primary" %>
<% end %>
<br>
<% @comments.each do |comment| %>
  <h5>
    <%= comment.employer.employer_profile.business_name %> wrote <% time_ago_in_words(comment.created_at) %> ago
  </h5>
<% end %>

