<% if current_employee %>
  <% current_employee.employee_profile.profession.job_postings.each do |job| %>
  <div class="section-panel">
    <div class="section-panel__inner">
      <div class="flex flex--align-items flex--justify-between">
        <%# <% if job.start_time > Time.current%>
        <h5><%= link_to job.title, job %></h5>
        <div>
          <span class="chip">
            <%= job.profession.name %>
          </span>
        </div>
        <%# <% end %>
      </div>
        <p>
        <%= job.employer.employer_profile.business_name %>
        </p>
      <hr>
      <h5>Content</h5>
      <p>
        <%= job.content %>
      </p>
      <hr>
      <div class="flex flex--gutters">
        <div>
          <span><strong>Start: </strong><%= job.start_time.strftime("%d %b %Y at %H:%m") %></span>
        </div>
        <div>
          <span class="vertical-divider"></span>
        </div>
        <div>
          <span><strong>End: </strong><%= job.end_time.strftime("%d %b %Y at %H:%m")%></span>
        </div>
        <div>
            <span class="vertical-divider"></span>
          </div>
        <div>
          <span><strong>Hourly Rate: </strong><%= job.hourly_rate %></span>
        </div>
      </div>  
      <hr>
    </div>
  </div>
  <br>
<% end %>
