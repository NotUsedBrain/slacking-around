<section>
  <article>
    <div class="card__header">
      <% if current_employer %>
        <% if @job_application.employee.employee_profile.avatar.attached? %>
          <%= image_tag(@job_application.employee.employee_profile.avatar, :class => "card__image")  %>
        <% else %>
          <%= image_tag('default.jpg', :class => "card__image") %>
        <% end %>

        <div class="card__body">
          <h5 class="card__title">Name:</h5>
          <p class="card__content">
            <%= @job_application.employee.employee_profile.full_name %> 
          </p>

          <h5 class="card__title">Date of Birth:</h5>
          <p class="card__content">
            <%= @job_application.employee.employee_profile.date_of_birth %> 
          </p>

          <h5 class="card__title">Profession:</h5>
          <p class="card__content">
            <%= @job_application.employee.employee_profile.profession.name %> 
          </p>
        </div>
      </div>

        <div class="card__body">
          <h5 class="card__title">Bio:</h5>
          <p class="card__content">
            <%= truncate(@job_application.employee.employee_profile.bio, length: 1500)%>
          </p>
        </div>

        <footer class="card__footer">
          <%= link_to 'Accept Application', job_application_accept_path(@job_application), method: :patch, class: 'button button--success' %>
          <span class="vertical-divider"></span>
          <%= link_to 'Reject Application', job_application_reject_path(@job_application), method: :patch, class: 'button button--danger' %>
        </footer>
      <% end %>
  </article>
</section>

